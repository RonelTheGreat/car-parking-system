<% include ./partials/admin_top %>

    <div class="register-parent">
        <div class="form-container">
                <div class="home">
                    <a href="/admin/home"><i class="fas fa-arrow-left"></i> back to home</a>
                </div>
            <h1><i class="fas fa-user-ninja"></i>  create new parokya</h1>
            <form action="/admin/register" method="POST">
                <% if (errors) { %>
                <% errors.forEach(error => { %>
                <p class="error"><i class="fas fa-exclamation-circle"></i>
                    <%= error.msg %>
                </p>
                <% }) %>
                <% } %>
                <label>username</label>
                <input type="text" name="username" value="<%= (inputValues) ? inputValues[0].username : '' %>">

                <label>firstname</label>
                <input type="text" name="fname" value="<%= (inputValues) ? inputValues[0].fname : '' %>">
                
                <label>middle initial</label>
                <input type="text" name="mi" value="<%= (inputValues) ? inputValues[0].mi : '' %>">
                
                <label>last name</label>
                <input type="text" name="lname" value="<%= (inputValues) ? inputValues[0].lname : '' %>">

                <label>contact number</label>
                <input type="text" name="contact" value="<%= (inputValues) ? inputValues[0].contact : '' %>">
                
                <label>password</label>
                <input type="password" name="password" value="<%= (inputValues) ? inputValues[0].password : '' %>">

                <label>re-type password</label>
                <input type="password" name="cpassword">

                <label>rfid</label>
                <input type="text" name="rfid" value="<%= (inputValues) ? inputValues[0].rfid : '' %>">

                <label>initial balance</label>
                <input type="number" name="balance" value="<%= (inputValues) ? inputValues[0].balance : '200' %>" min="0">               

                <button><i class="far fa-thumbs-up"></i> submit</button>
            </form>
        </div>
    </div>
    
<% include ./partials/bottom %>